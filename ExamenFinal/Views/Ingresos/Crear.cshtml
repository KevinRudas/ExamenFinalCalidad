
@{
    ViewBag.Title = "Crear";
}
<h2>Crear Ingresos </h2>
<form action="/Ingresos/Crear" method="post">
    <div class="form-group">
        <label>Monto</label>
        <input id="idMonto" type="text" class="form-control" name="Monto" placeholder="Ingrese Monto">
        @Html.ValidationMessage("Monto", new { style = "color:red" })

    </div>
    <div class="form-group">
        <label>Fecha</label>
        <input id="idFecha" type="date" class="form-control" name="Fecha" placeholder="Fecha">
        @Html.ValidationMessage("Fecha", new { style = "color:red" })
    </div>
    <div class="form-group">
        <label>Descripcion</label>
        <input id="idDescripcion" type="text" class="form-control" name="Descripcion" placeholder="Ingrese descripción ">
        @Html.ValidationMessage("Descripcion", new { style = "color:red" })
    </div>
    <div class="form-group">
        <label>CUENTA EN LA QUE SE AGREGARA  EL GASTO </label>
        <select name="idCuentaI" class="form-control" id="idCuenta">
            @foreach (var tarjeta in ViewBag.Cuentas)
            {
                <option value="@tarjeta.idCuenta">@tarjeta.nombre</option>
            }
        </select>
        @Html.ValidationMessage("Cuenta", new { style = "color:red" })

    </div>
    <button class="btn btn-primary" id="idGuardar">Guardar</button>
</form>